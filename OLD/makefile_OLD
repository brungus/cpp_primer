LINK_TARGET = run

OBJS = main.o chp6.o

all: $(LINK_TARGET)
	@echo --- Compile done, running ---
	@echo
	@./$(LINK_TARGET) || (echo "Returned $$?")

$(LINK_TARGET): $(OBJS)
	g++ -std=c++0x -Wall -o $@ $^

%.o : %.cpp
	g++ -std=c++0x -Wall -c $<

clean:
	rm *.o $(LINK_TARGET)


#g++ -std=c++0x -Wall -Werror -pedantic -o $@ $^
#g++ -std=c++0x -Wall -Werror -pedantic -c $<
