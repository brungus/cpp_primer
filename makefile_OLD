PROG = run
CC = g++
CPPFLAGS = -std=c++0x -Wall
LDFLAGS = -I/home/gorb/projects/cpp/include
OBJS = main.o Person.o Sales_data.o

all : $(PROG)
	@./$(PROG)

$(PROG) : $(OBJS)
	$(CC) -o $(PROG) $(CPPFLAGS) $(LDFLAGS) $(OBJS)

%.o : %.cpp
	$(CC) $(CPPFLAGS) $(LDFLAGS) -c $<

clean :
	rm -f $(PROG) $(OBJS)

